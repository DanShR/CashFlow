@using Microsoft.AspNetCore.Identity
@using CashFlow.Areas.Account
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @User.Identity.Name
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" asp-area="Account" asp-controller="Account" asp-action="Edit" title="Manage">Подробно</a>
                <a class="dropdown-item" asp-area="Account" asp-controller="Account" asp-action="ChangePassword" title="Manage">Изменить пароль</a>
                <div class="dropdown-item">
                    <form class="form-inline" asp-area="Account" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                        <button type="submit" class="nav-link btn btn-link text-dark">Выход</button>
                    </form>
                </div>
            </div>
        </li>
    }

    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Account" asp-action="Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Account" asp-controller="Account" asp-action="Login">Войти</a>
        </li>
    }
</ul>
