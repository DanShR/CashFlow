@model CashFlow.Areas.Account.ViewModels.RecoveryPasswordViewModel

<div class="container">
    <div class="row">
        <div class="col-6">
            <form method="post" asp-area="Account" asp-controller="Account" asp-action="RecoveyChangePassword">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="Code"/>
                <div class="form-group">
                    <label asp-for="NewPassword">Новый пароль</label>
                    <input class="form-control" asp-for="NewPassword">
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Подтверждение</label>
                    <input class="form-control" asp-for="ConfirmPassword">
                </div>

                <button type="submit" class="btn btn-primary">Изменить пароль</button>
            </form>

        </div>

    </div>
</div>